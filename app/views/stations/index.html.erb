  <div class="station-index text-center">
  <h1>Stations</h1>
  <%= will_paginate @stations %>

  <% if current_user && current_user.admin? %>
    <h3><%= link_to "Create New Station", new_admin_station_path %></h3>
  <% end %>

  <div class="container station-container">
  <ul>
    <% @stations.each do |station| %>
    <a href= "/stations/<%= station.slug %>">
    <div class="col-lg-4 col-md-3">
      <div class="panel">
        <li><p class="label">Name:</p> <%= station.name %></li>
        <li><p class="label">Dock Count:</p> <%= station.dock_count %></li>
        <li><p class="label">City:</p> <%= station.city %></li>
        <li><p class="label">Installation Date:</p> <%= station.installation_date.strftime("%m/%d/%Y") %></li>
        <% if current_user && current_user.admin? %>
          <%= link_to "Edit", edit_station_path(station.slug) %> - <%= link_to "Delete", station_path(station.slug), method: "delete", data: {confirm: "Are you sure you want to delete this station?"} %>
        <% end %>
      </div>
    </div>
    <% end %>
  </ul>
  </div>
  <%= will_paginate @stations %>
</div>
