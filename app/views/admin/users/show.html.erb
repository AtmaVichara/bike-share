<div class="container text-center">

  <div class="index-pagination">
    <div class="panel panel-default">
      <h2 class='panel-heading'><%= current_user.first_name %>'s Profile</h2>
      <div class="panel-body">
        <p>Name: <%= current_user.first_name %> <%= current_user.last_name %></p>
        <p>Email: <%= current_user.email %></p>
        <% if current_user && current_user.admin? %>
          <%= link_to "delete", user_path(current_user), method: "delete", data: {confirm: "Are you sure you want to delete your account?"} %> -
          <%= link_to "edit", edit_user_path(current_user) %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="admin-links">
    <h1><%= link_to 'Bike-Shop', accessories_path %></h1>
  </div>


  <h2>All Orders</h2>

  <div class="">
    <%= link_to "Ordered(#{@orders.by_status("Ordered")})", admin_dashboard_path, params: {sort: "Ordered"} %>
    <%= link_to "Ordered(#{@orders.by_status("Paid")})", admin_dashboard_path, params: {sort: "Paid"} %>
    <%= link_to "Ordered(#{@orders.by_status("Cancelled")})", admin_dashboard_path, params: {sort: "Cancelled"} %>
    <%= link_to "Ordered(#{@orders.by_status("Completed")})", admin_dashboard_path, params: {sort: "Completed"} %>
  </div>

  <% @orders.each do |order| %>
    <ul>
      <li><%= link_to "Order: #{order.id}", admin_order_path(order) %>: total - <%= order.total %>, <%= order.status %></li>
      <li><% if order.status == "Ordered" %>
            <%= button_to "Cancel", admin_order_path(order), method: 'put', params: {status: "Cancelled"} %>
            <%= button_to "Mark as Paid", admin_order_path(order), method: 'put' %>
          <% elsif order.status == "Paid" %>
            <%= button_to "Cancel", admin_order_path(order), method: 'put' %>
            <%= button_to "Mark as Completed", admin_order_path(order), method: 'put' %>
          <% end %>
      </li>
    </ul>
  <% end %>

</div>
